################################################################################
# MULTIMODAL GRADING SYSTEM CONFIGURATION
# 
# This file contains environment variables and configuration parameters
# for the automated grading system.
#
# Usage: Copy this file to config/grading_config.env and customize values
################################################################################

# API Configuration
# Replace with your actual API credentials
AI_API_KEY="your_api_key_here"
AI_API_ENDPOINT="https://api.anthropic.com/v1/messages"
AI_MODEL_VERSION="claude-sonnet-4-5-20250929"

# Model parameters for grading
AI_MAX_TOKENS=4096
AI_TEMPERATURE=0.3  # Lower temperature for more consistent grading

# Directory Configuration
# These can be overridden via command line arguments
SUBMISSIONS_DIR="./submissions"
OUTPUT_DIR="./output"
LOGS_DIR="./logs"
TEMP_DIR="./temp"

# Processing Configuration
PARALLEL_PROCESSING=false
MAX_CONCURRENT=4
BATCH_SIZE=10  # Number of submissions to process before checkpoint

# Content Extraction Settings
EXTRACT_TEXT=true
EXTRACT_IMAGES=true
EXTRACT_CSS=true
EXTRACT_METADATA=true

# Supported file extensions
SUPPORTED_HTML_EXTENSIONS=".html .htm"
SUPPORTED_IMAGE_EXTENSIONS=".jpg .jpeg .png .gif .svg .webp"
SUPPORTED_STYLE_EXTENSIONS=".css"

# Image processing
MAX_IMAGE_SIZE_MB=10
RESIZE_LARGE_IMAGES=true
TARGET_IMAGE_WIDTH=1200

# Grading Rubric Configuration
# Path to rubric definition file (JSON format)
RUBRIC_FILE="./config/grading_rubric.json"

# Evaluation perspectives (comma-separated)
# These define the different analytical lenses applied during grading
EVALUATION_PERSPECTIVES="content_quality,visual_design,technical_implementation,accessibility,usability"

# Feedback Settings
FEEDBACK_FORMAT="html"  # Options: html, pdf, json, markdown
INCLUDE_INLINE_COMMENTS=true
PROVIDE_IMPROVEMENT_SUGGESTIONS=true
INCLUDE_EXEMPLARS=false

# Scoring Configuration
USE_NUMERICAL_SCORES=true
SCORE_RANGE_MIN=0
SCORE_RANGE_MAX=100
SCORE_PRECISION=1  # Decimal places for scores

# Quality Control
ENABLE_PLAGIARISM_CHECK=false
PLAGIARISM_THRESHOLD=0.85
ENABLE_CONSISTENCY_CHECK=true  # Compare scores across submissions

# Rate Limiting (to manage API costs)
MAX_API_CALLS_PER_MINUTE=50
DELAY_BETWEEN_CALLS_MS=100

# Retry Configuration
MAX_RETRIES=3
RETRY_DELAY_SECONDS=5
EXPONENTIAL_BACKOFF=true

# Logging Configuration
LOG_LEVEL="INFO"  # Options: DEBUG, INFO, WARN, ERROR
RETAIN_LOGS_DAYS=30
ARCHIVE_OLD_LOGS=true

# Error Handling
CONTINUE_ON_ERROR=true  # Whether to continue processing if one submission fails
NOTIFY_ON_ERROR=false
ERROR_NOTIFICATION_EMAIL=""

# Output Configuration
GENERATE_SUMMARY_REPORT=true
EXPORT_METRICS=true
METRICS_FORMAT="csv"  # Options: csv, json

# Security Settings
SANITIZE_OUTPUT=true  # Remove potentially sensitive information from logs
ENCRYPT_STUDENT_DATA=false

# Version Control
SAVE_PROCESSING_VERSION=true
ARCHIVE_SUBMISSIONS=false

# Performance Tuning
USE_CACHING=true
CACHE_DIR="./cache"
CACHE_EXPIRY_HOURS=24

# Development/Testing
DEBUG_MODE=false
SAVE_INTERMEDIATE_FILES=false  # Keep extraction outputs for debugging
DRY_RUN_DEFAULT=false
